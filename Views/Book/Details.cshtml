@model OnlineBookStoreMVC.DTOs.BookDto

@{
    ViewData["Title"] = "Book Details";
}

<div class="container my-5">
    <div class="row">
        <div class="col-md-8 offset-md-2">
            <div class="card shadow-sm">
                <div class="card-body">
                    <h1 class="text-center mb-4">@Model.Title</h1>

                    <div class="row mb-4">
                        <div class="col-md-4 text-center">
                            <img src="@Model.CoverImageUrl" alt="Cover Image" class="img-fluid" style="max-width: 200px;" />
                        </div>
                        <div class="col-md-8">
                            <dl class="row">
                                <dt class="col-sm-4">Author</dt>
                                <dd class="col-sm-8">@Model.AuthorName</dd>

                                <dt class="col-sm-4">Category</dt>
                                <dd class="col-sm-8">@Model.CategoryName</dd>

                                <dt class="col-sm-4">ISBN</dt>
                                <dd class="col-sm-8">@Model.ISBN</dd>

                                <dt class="col-sm-4">Publisher</dt>
                                <dd class="col-sm-8">@Model.Publisher</dd>

                                <dt class="col-sm-4">Publication Date</dt>
                                <dd class="col-sm-8">@Model.PublicationDate.ToShortDateString()</dd>

                                <dt class="col-sm-4">Price</dt>
                                <dd class="col-sm-8">@Model.Price.ToString("N2")</dd>

                                <dt class="col-sm-4">Language</dt>
                                <dd class="col-sm-8">@Model.Language</dd>

                                <dt class="col-sm-4">Pages</dt>
                                <dd class="col-sm-8">@Model.Pages</dd>
                            </dl>
                        </div>
                    </div>

                    <h3 class="mt-4">Reviews</h3>
                    <ul class="list-unstyled">
                        @foreach (var review in Model.Reviews)
                        {
                            <li class="border-bottom py-2">
                                <strong>Rating:</strong> @review.Rating<br />
                                <strong>Comment:</strong> @review.Comment
                            </li>
                        }
                    </ul>

                    <div class="text-center mt-4">
                        <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-warning me-2">Edit</a>
                        <a asp-action="Index" class="btn btn-primary">Back to List</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
