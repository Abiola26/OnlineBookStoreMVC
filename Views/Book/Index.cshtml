@model IEnumerable<OnlineBookStoreMVC.DTOs.BookDto>

@{
    ViewData["Title"] = "Books";
}


<h1>Books</h1>

<p>
    <a class="btn btn-primary" href="@Url.Action("Create")">Create New</a>
</p>

<table class="table">
    <thead>
        <tr>
            <th>Title</th>
            <th>Author</th>
            <th>Category</th>
            <th>ISBN</th>
            <th>Price</th>
            <th>Language</th>
            <th>Pages</th>
           @*  <th>Has image</th> *@
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.Title</td>
                <td>@item.AuthorName</td>
                <td>@item.CategoryName</td>
                <td>@item.ISBN</td>
                <td>@item.Price</td>
                <td>@item.Language</td>
                <td>@item.Pages</td>
                @* <td><i class="@HasImage(item)"></i></td> *@
                <td>
                    <a class="btn btn-info" href="@Url.Action("Edit", new { id = item.Id })">Edit</a>
                    <a class="btn btn-secondary" href="@Url.Action("Details", new { id = item.Id })">Details</a>
                    <a class="btn btn-danger" href="@Url.Action("Delete", new { id = item.Id })">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
