@model OnlineBookStoreMVC.DTOs.OrderDto

<div class="container my-5">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card shadow-lg">
                <div class="card-body text-center">
                    <h2 class="display-5 mb-4 text-success">Order Confirmation</h2>
                    <p class="lead">Thank you for your order!</p>
                    <p>We have sent a confirmation email to your email address.</p>
                    <hr class="my-4">
                    <p class="mb-0">We hope you enjoy your purchase!</p>
                </div>
                <div class="card-footer text-end">
                    <a asp-controller="Store" asp-action="Index" class="btn btn-success btn-lg shadow-sm">
                        Continue Shopping
                    </a>
                </div>
            </div>
        </div>
    </div>
</div>