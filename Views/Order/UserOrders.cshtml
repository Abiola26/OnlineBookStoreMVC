@model IEnumerable<OnlineBookStoreMVC.DTOs.OrderDto>

@{
    ViewData["Title"] = "User Orders";
}

<div class="container my-5">
    <h2 class="text-center mb-4">@ViewData["Title"]</h2>

    @if (!Model.Any())
    {
        <p class="text-center text-muted">No orders found.</p>
    }
    else
    {
        @foreach (var order in Model)
        {
            <div class="card mb-4 shadow-sm">
                <div class="card-header bg-primary text-white">
                    <h4>Order ID: @order.Id</h4> 
                    <p class="mb-0">Order Date: @order.OrderDate.ToString("yyyy-MM-dd")</p>
                    <p class="mb-0">Total Amount: <strong>&#8358;@order.TotalAmount.ToString("N2")</strong></p>
                </div>
                <div class="card-body">
                    <table class="table table-bordered table-hover">
                        <thead class="table-secondary">
                            <tr>
                                <th>Book Title</th>
                                <th class="text-center">Quantity</th>
                                <th class="text-center">Unit Price (&#8358;)</th>
                                <th class="text-center">Total Price (&#8358;)</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in order.OrderItems)
                            {
                                <tr>
                                    <td>@item.BookTitle</td>
                                    <td class="text-center">@item.Quantity</td>
                                    <td class="text-center">@item.UnitPrice.ToString("N2")</td>
                                    <td class="text-center">@(item.Quantity * item.UnitPrice)</td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
                <div class="card-footer text-end">
                    <strong>Total: &#8358;@order.TotalAmount.ToString("N2")</strong>
                </div>
            </div>
        }
    }
</div>

<style>
    .card {
        border: none;
        border-radius: 8px;
    }
    .card-header {
        border-radius: 8px 8px 0 0;
    }
    table th, table td {
        vertical-align: middle;
    }
</style>
