@model IEnumerable<OnlineBookStoreMVC.DTOs.OrderDto>

@{
    ViewData["Title"] = "Pending Orders";
}

<h2>@ViewData["Title"]</h2>

@if (Model.Any())
{

    <table class="table table-striped">
        <thead>
            <tr>
                <th>Order ID</th>
                <th>User</th>
                <th>Order Date</th>
                <th>Total Amount</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var order in Model)
            {
                <tr>
                    <td>@order.Id</td>
                    <td>@order.UserName</td>
                    <td>@order.OrderDate.ToString("yyyy-MM-dd")</td>
                    <td>@order.TotalAmount.ToString("N2")</td> 
                    <td>
                        <a asp-action="AssignDeliveryToOrder" asp-route-id="@order.Id" class="btn btn-primary">Assign Delivery</a>
                        <a asp-action="OrderDetails" asp-route-id="@order.Id" class="btn btn-primary">View Order Detail</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
}
else
{
    <p>No pending orders available.</p>
}
