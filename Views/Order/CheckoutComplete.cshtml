@model OnlineBookStoreMVC.DTOs.OrderDto

@{
    ViewData["Title"] = "Order Confirmation";
}

<div class="container my-5">
    <div class="text-center mb-4">
        <h2 class="display-4 text-success">Order Confirmed!</h2>
        <p class="lead">Thank you for your purchase. Your order has been placed successfully.</p>
    </div>

    <div class="card shadow-lg border-0">
        <div class="card-header bg-success text-white">
            <h4 class="mb-0">Order Details</h4>
            <small class="text-light">Order Date: @Model.OrderDate.ToString("f")</small>
        </div>
        <div class="card-body">
            <h5 class="mb-4">Items Ordered:</h5>
            <div class="table-responsive">
                <table class="table table-hover">
                    <thead class="thead-light">
                        <tr>
                            <th>Title</th>
                            <th>Quantity</th>
                            <th>Unit Price</th>
                            <th>Subtotal</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model.OrderItems)
                        {
                            <tr>
                                <td>@item.BookTitle</td>
                                <td>@item.Quantity</td>
                                <td>₦@item.UnitPrice.ToString("N2")</td>
                                <td>₦@(item.Quantity * item.UnitPrice)</td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
            <div class="text-end mt-4">
                <h4 class="text-success">Total Amount: ₦@Model.TotalAmount.ToString("N2")</h4>
            </div>
        </div>
        <div class="card-footer text-end">
            <a asp-controller="Store" asp-action="Index" class="btn btn-outline-success btn-lg">Continue Shopping</a>
        </div>
    </div>
</div>
