@using System.Security.Claims
@model IEnumerable<OnlineBookStoreMVC.Entities.Book>

@{
    ViewData["Title"] = "Store";
}

<h2 class="my-4 text-center">Browse Our Collection</h2>

<!-- Filter Form with Search Button -->
<div class="d-flex justify-content-between align-items-center mb-4">
    <!-- Filter Button (optional, if you want to add a filter section) -->
    <button class="btn btn-outline-secondary" type="button" data-bs-toggle="collapse" data-bs-target="#filterCollapse" aria-expanded="false" aria-controls="filterCollapse">
        <i class="fa-solid fa-filter"></i> Filters
    </button>

    <!-- Search Form -->
    <form asp-action="Index" class="d-flex">
        <input type="text" id="searchString" name="searchString" placeholder="Search by Title or Author" class="form-control me-2" />
        <button type="submit" class="btn btn-primary">
            <i class="fa-solid fa-search"></i>
        </button>
    </form>
</div>

<!-- Collapsible Filter Form (optional) -->
<div class="collapse" id="filterCollapse">
    <div class="card card-body mb-4 shadow-sm">
        <form asp-action="Index" class="row g-3">
            <div class="col-md-6">
                <label for="priceRange" class="form-label">Price Range</label>
                <div class="d-flex">
                    <input type="number" id="minPrice" name="minPrice" step="1" placeholder="Min" class="form-control me-2" />
                    <input type="number" id="maxPrice" name="maxPrice" step="1" placeholder="Max" class="form-control" />
                </div>
            </div>
            <div class="col-12 d-flex justify-content-end">
                <button type="submit" class="btn btn-primary me-2">Apply Filters</button>
                <a asp-action="Index" class="btn btn-secondary">Clear</a>
            </div>
        </form>
    </div>
</div>

<!-- Book Listing -->
<div class="row row-cols-1 row-cols-md-4 g-4">
    @foreach (var book in Model)
    {
        <div class="col">
            <div class="card h-100 store-card shadow-sm">
                <a class="a-cleanup" asp-controller="Store" asp-action="Details" asp-route-id="@book.Id">
                    <img src="@book.CoverImageUrl" class="card-img-top card-img-custom" alt="@book.Title" />
                    <div class="card-body d-flex flex-column">
                        <h5 class="card-title text-center text-truncate">@book.Title</h5>
                        <p class="card-text text-muted text-truncate text-center">By Abiola</p>
                        <p class="card-text text-center mt-auto">@book.Price.ToString("c")</p>
                    </div>
                </a>
                <div class="card-footer text-center">
                    <form asp-controller="ShoppingCart" asp-action="AddToCart" method="post" class="d-inline">
                        <input type="hidden" name="bookId" value="@book.Id" />
                        <input type="hidden" name="userId" value="@User.FindFirstValue(ClaimTypes.NameIdentifier)" />
                        <button type="submit" class="btn btn-primary store-btn w-100">
                            <i class="fa-solid fa-cart-plus me-2"></i>Add to Cart
                        </button>
                    </form>
                </div>
            </div>
        </div>
    }
</div>
