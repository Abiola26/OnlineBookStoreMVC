@model OnlineBookStoreMVC.Entities.Book

@{
    ViewData["Title"] = "Details";
}

<h1>Details</h1>

<div class="row">
    <div class="col-5">

        <div>
            <h4>Book</h4>
            <hr />
            <h2>@Model.Title</h2>
            <dl class="row">
                <dt class="col-sm-2">Author</dt>
                <dd class="col-sm-10">@Model.Author</dd>

                <dt class="col-sm-2">Category</dt>
                <dd class="col-sm-10">@Model.Category</dd>

                <dt class="col-sm-2">ISBN</dt>
                <dd class="col-sm-10">@Model.ISBN</dd>

                <dt class="col-sm-2">Publisher</dt>
                <dd class="col-sm-10">@Model.Publisher</dd>

                <dt class="col-sm-2">Publication Date</dt>
                <dd class="col-sm-10">@Model.PublicationDate.ToShortDateString()</dd>

                <dt class="col-sm-2">Price</dt>
                <dd class="col-sm-10">@Model.Price.ToString("C")</dd>

                <dt class="col-sm-2">Language</dt>
                <dd class="col-sm-10">@Model.Language</dd>

                <dt class="col-sm-2">Pages</dt>
                <dd class="col-sm-10">@Model.Pages</dd>

               @*  <dt class="col-sm-2">Cover Image</dt>
                <dd class="col-sm-10">
                    <img src="@Model.CoverImageUrl" alt="Cover Image" style="max-width: 200px;" />
                </dd> *@
            </dl>
        </div>
        <div>
            <a asp-action="Index" class="btn btn-warning"><i class="fa-solid fa-arrow-left"></i> Back</a>
            <a asp-controller="Cart" asp-action="AddToCart" asp-route-id="@Model.Id" class="btn btn-primary store-btn float-right mr-5">Add to cart <i class="fa-solid fa-cart-plus"></i></a>
        </div>
    </div>
    <div class="col-4">
        <img src="@Model.CoverImageUrl" class="w-100" />
    </div>
</div>