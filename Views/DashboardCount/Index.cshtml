@model OnlineBookStoreMVC.DTOs.DashboardCountDto

<div class="container mt-5">
    <h1 class="text-center mb-5">Admin Dashboard</h1>

    <div class="row">
        <!-- Users Count -->
        <div class="col-md-4 mb-4">
            <a asp-controller="User" asp-action="Index" class="text-decoration-none">
                <div class="card shadow-sm bg-primary text-white">
                    <div class="card-body text-center">
                        <h5 class="card-title text-white">Users</h5>
                        <h2 class="text-white">@Model.UserCount</h2>
                        <i class="fa fa-users fa-3x text-white"></i>
                    </div>
                </div>
            </a>
        </div>

        <!-- Deliveries Count -->
        <div class="col-md-4 mb-4">
            <a asp-controller="Delivery" asp-action="Index" class="text-decoration-none">
                <div class="card shadow-sm bg-warning text-white">
                    <div class="card-body text-center">
                        <h5 class="card-title text-white">Deliveries</h5>
                        <h2 class="text-white">@Model.DeliveryCount</h2>
                        <i class="fa fa-truck fa-3x text-white"></i>
                    </div>
                </div>
            </a>
        </div>

        <!-- Orders Count -->
        <div class="col-md-4 mb-4">
            <a asp-controller="Order" asp-action="AdminOrders" class="text-decoration-none">
                <div class="card shadow-sm bg-info text-white">
                    <div class="card-body text-center">
                        <h5 class="card-title text-white">Orders</h5>
                        <h2 class="text-white">@Model.OrderCount</h2>
                        <i class="fa fa-shopping-cart fa-3x text-white"></i>
                    </div>
                </div>
            </a>
        </div>

        <!-- Categories Count -->
        <div class="col-md-4 mb-4">
            <a asp-controller="Category" asp-action="Index" class="text-decoration-none">
                <div class="card shadow-sm bg-danger text-white">
                    <div class="card-body text-center">
                        <h5 class="card-title text-white">Categories</h5>
                        <h2 class="text-white">@Model.CategoryCount</h2>
                        <i class="fa fa-tags fa-3x text-white"></i>
                    </div>
                </div>
            </a>
        </div>

        <!-- Books Count -->
        <div class="col-md-4 mb-4">
            <a asp-controller="Book" asp-action="Index" class="text-decoration-none">
                <div class="card shadow-sm bg-dark text-white">
                    <div class="card-body text-center">
                        <h5 class="card-title text-white">Books</h5>
                        <h2 class="text-white">@Model.BookCount</h2>
                        <i class="fa fa-book fa-3x text-white"></i>
                    </div>
                </div>
            </a>
        </div>
</div>

