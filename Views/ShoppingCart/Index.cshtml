@model OnlineBookStoreMVC.DTOs.ShoppingCartDto
@{
    ViewData["Title"] = "Shopping Cart";
}

<h2>@ViewData["Title"]</h2>

@if (Model.ShoppingCartItems.Any())
{
    <table class="table">
        <thead>
            <tr>
                <th>Title</th>
                <th>Quantity</th>
                <th>Price</th>
                <th>Total</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model.ShoppingCartItems)
            {
                <tr>
                    <td>@item.BookTitle</td>
                    <td>@item.Quantity</td>
                    <td>@item.Price</td>
                    <td>@item.TotalPrice.ToString("c")</td>
                    <td>
                        <form asp-action="ReduceCartItemQuantity" method="post" style="display:inline;">
                            <input type="hidden" name="userId" value="@Model.UserId" />
                            <input type="hidden" name="bookId" value="@item.BookId" />
                            <button type="submit" class="btn btn-sm btn-warning">-</button>
                        </form>
                        <form asp-action="IncreaseCartItemQuantity" method="post" style="display:inline;">
                            <input type="hidden" name="userId" value="@Model.UserId" />
                            <input type="hidden" name="bookId" value="@item.BookId" />
                            <button type="submit" class="btn btn-sm btn-success">+</button>
                        </form>
                        <form asp-action="RemoveCartItem" method="post" style="display:inline;">
                            <input type="hidden" name="userId" value="@Model.UserId" />
                            <input type="hidden" name="bookId" value="@item.BookId" />
                            <button type="submit" class="btn btn-sm btn-danger">Remove</button>
                        </form>
                    </td>
                </tr>
            }
        </tbody>
        <tfoot>
            <tr>
                <td colspan="3"><strong>Total:</strong></td>
                <td colspan="2">@Model.TotalPrice.ToString("c")</td>
            </tr>
        </tfoot>
    </table>

    <form asp-action="Clear" method="post">
        <input type="hidden" name="userId" value="@Model.UserId" />
        <a class="a-cleanup" ><div class="btn btn-danger float-right mr-5"><i class="fa-solid fa-trash-can"></i> Empty Cart</div> </a>
    </form>

    <a class="a-cleanup" asp-controller="Order" asp-action="Checkout"><div class="btn btn-success float-right mr-5">Checkout <i class="fa-solid fa-angles-right"></i></div> </a>
}
else
{
    <h3 class="text-center">Cart is empty</h3>
}

