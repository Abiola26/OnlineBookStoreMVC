@model IEnumerable<OnlineBookStoreMVC.DTOs.DeliveryDto>

@{
    ViewData["Title"] = "Deliveries";
}

<div class="container my-4">
    
    <h2 class="text-center mb-4">Deliveries</h2>

    <div class="d-flex justify-content-end mb-3">
        <a asp-action="Create" class="btn btn-secondary">Create New Delivery</a>
    </div>

    <div class="table-responsive">
        <table id="tblData" class="table table-bordered table-striped w-100">
            <thead class="table-dark">
                <tr>
                    <th>S/N</th>
                    <th>FirstName</th>
                    <th>LastName</th> 
                    <th>Phone No</th>
                    <th>Gender</th>
                    <th>Email</th>
                    <th>Transport</th> 
                    <th class="text-center">Actions</th>
                </tr>
            </thead>
            <tbody>
                @{
                    int serialNumber = 1;
                }
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@serialNumber</td>
                        <td>@item.FirstName</td>
                        <td>@item.LastName</td>
                        <td>@item.PhoneNumber</td>
                        <td>@item.Gender</td>
                        <td>@item.Email</td>
                        <td>@item.TransportationType</td>
                        <td class="text-center">
                            <a class="btn btn-warning btn-sm mx-1" asp-action="Edit" asp-route-id="@item.Id" title="Edit">
                                <i class="fas fa-edit"></i>
                            </a>
                            <a class="btn btn-info btn-sm mx-1" asp-action="Details" asp-route-id="@item.Id" title="Details">
                                <i class="fas fa-eye"></i>
                            </a>
                            <a class="btn btn-danger btn-sm mx-1" asp-action="DeleteDelvery" asp-route-id="@item.Id" title="Delete">
                                <i class="fas fa-trash-alt"></i>
                            </a>
                        </td>
                    </tr>
                    serialNumber++;
                }
            </tbody>
        </table>
    </div>
</div>

@section Scripts {
    <!-- Include the JavaScript file for DataTables or custom scripts if needed -->
    <script src="~/js/book.js"></script>
}
