@model OnlineBookStoreMVC.Models.ForgotPasswordModel

@{
    ViewData["Title"] = "Forgot Password";
}

<h2 class="text-center">Forgot Password</h2>

<p class="text-center">Enter your email address below and we will send you a code to reset your password.</p>

<form asp-action="ForgotPassword" method="post" class="forgot-password-form">
    <div class="form-group">
        <label asp-for="Email" class="form-label">Email Address</label>
        <input asp-for="Email" class="form-control" placeholder="Enter your email" />
        <span asp-validation-for="Email" class="text-danger"></span>
    </div>

    <div class="form-group">
        <button type="submit" class="btn btn-primary btn-block">Send Reset Code</button>
    </div>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
