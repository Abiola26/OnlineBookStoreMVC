@model OnlineBookStoreMVC.Models.VerifyResetCodeModel

@{
    ViewData["Title"] = "Verify Reset Code";
}

<div class="container my-5">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card shadow-sm">
                <div class="card-body">
                    <h2 class="text-center text-primary">Verify Reset Code</h2>
                    <p class="text-center mb-4">A reset code has been sent to your email. Please enter the code below to reset your password.</p>

                    <form asp-action="VerifyResetCode" method="post" class="form-verify-reset-code">
                        <div class="form-group mb-3">
                            <label asp-for="Email" class="form-label">Email Address</label>
                            <input asp-for="Email" class="form-control" readonly="readonly" />
                            <span asp-validation-for="Email" class="text-danger"></span>
                        </div>

                        <div class="form-group mb-3">
                            <label asp-for="Code" class="form-label">Reset Code</label>
                            <input asp-for="Code" class="form-control" placeholder="Enter the reset code" />
                            <span asp-validation-for="Code" class="text-danger"></span>
                        </div>

                        <div class="d-grid">
                            <button type="submit" class="btn btn-primary btn-lg shadow-sm">Verify Code</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
