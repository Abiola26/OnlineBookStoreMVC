@model OnlineBookStoreMVC.Models.LoginModel

@{
    ViewData["Title"] = "Login";
}

<h2 class="text-center">Login</h2>

<form asp-action="Login" method="post" class="login-form">
    <div class="form-group">
        <label asp-for="Username" class="form-label"></label>
        <input asp-for="Username" class="form-control" placeholder="Username" />
        <span asp-validation-for="Username" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Password" class="form-label"></label>
        <input asp-for="Password" class="form-control" type="password" placeholder="Password" />
        <span asp-validation-for="Password" class="text-danger"></span>
    </div>
    <div class="form-group form-check-container">
        <input asp-for="RememberMe" class="form-check-input" type="checkbox" />
        <label asp-for="RememberMe" class="form-check-label">Remember me</label>
    </div>
    <div class="form-group">
        <button type="submit" class="btn btn-primary btn-block">Login</button>
    </div>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
